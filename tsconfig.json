{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": false,
    "module": "esnext",
    "target": "es2015",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": false,
    "jsx": "react",
    "jsxFactory": "h",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "jsxFragmentFactory": "React.Fragment",
    // "allowImportingTsExtensions": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
